@using Radzen
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    
                    
                    <RadzenStack Gap="0" class="rz-py-8 rz-px-12">

                        <RadzenAlert AlertStyle="AlertStyle.Danger" ShowIcon="false" Variant="Variant.Flat" Shade="Shade.Lighter">
                            <p>Sorry ! You Do not have Access to this Page...</p>
                        </RadzenAlert>
                    </RadzenStack>

                   
                </NotAuthorized>

            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <RadzenStack Gap="0" class="rz-py-8 rz-px-12">
                    
                    <RadzenAlert Title="WOW!" AlertStyle="AlertStyle.Info" Variant="Variant.Flat" Shade="Shade.Lighter">
                        <p>Sorry, there's nothing at this address.</p>
                    </RadzenAlert>
                   
                </RadzenStack>
               
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

